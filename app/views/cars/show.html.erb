<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to cars_path, class: "navbar-brand" do %>
    <%= cl_image_tag("logo-carbnb_oqqbjq", :width=>60, :height=>60, :crop=>"scale") %>
  <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <button type="button" class="btn btn-outline-primary"><%= link_to "Car List ", cars_path %><i class="bi bi-backspace"></i></button>
        </li>
      </ul>
    </div>
  </div>
  <hr></hr>
</div>

<div class="container">
  <div class="card-trip mb-3">
    <%= cl_image_tag("car_image_#{rand(1..21)}", width: 450, height: 350, crop: :scale) %>
  </div>
      <div class="cards">
        <div class="col-4-sm">
          <div class="card d-flex align-items-center text-align-left">
            <h5> <strong>Car Details:</strong></h5>
              <ul>
                <li> Brand: <%= @car.brand %> </li>
                <li> Model: <%= @car.model  %> </li>
                <li> Capacity: <%= @car.capacity  %></li>
                <li> Rating: <%= @car.rating %></li>
              </ul>
          </div>
          <div class="card d-flex align-items-center">
            <h5><strong>Price: $<%= @car.price %></strong></h5>
            <br>
            <%= link_to "Book this car!", car_bookings_path(@car), method: :post, id:"create-booking", class: "btn btn-flat"  %>
          </div>
        </div>
      </div>
</div
