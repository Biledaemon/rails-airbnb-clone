<div class="container">
  <div class="row cards">
    <% @cars.each do |car| %>
      <div class="col-4-sm">
        <div class="card-trip">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-trip-infos">
            <div>
              <h2> <strong><%= car.brand %></strong> </h2>
              <p><strong><%= car.model %>!</p>
            </div>
              <h2 class="card-trip-pricing"><strong><%= car.price %></h2>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
          </div>
      </div>
    <% end %>
  </div>
</div>
