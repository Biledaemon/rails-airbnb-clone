<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= cl_image_tag("zb332bxefxs7q09ebf8y.png", :width=>35, :height=>53, :crop=>"scale") %>
  <% end %>
 <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
      </ul>
      <button type="button" class="btn btn-outline-primary"><%= link_to "My Cars", mine_cars_path %><i class="bi bi-suit-heart"></i></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Create a new car", new_car_path %><i class="bi bi-plus-square"></i></button>
    <button type="button" class="btn btn-outline-primary"><%= link_to " Sign Out", destroy_user_session_path, method: :delete %> <i class="bi bi-box-arrow-right"></i></button>
    </div>
  </div>
  <hr></hr>
</div>

<div class="container">
  <% @cars.each_slice(3) do |s| %>
    <div class="row cards pb-3">
      <% s.each do |car| %>
        <div class="col-4-sm">
          <div class="card-trip">
            <%= cl_image_tag("car_image_#{rand(1..21)}", width: 800, height: 800, crop: :scale) %>
            <div class="card-trip-infos">
              <div>
                <h2> <strong><%= car.brand %></strong></h2>
                <p><strong><%= car.model %></strong></p>
              </div>
                <h2 class="card-trip-pricing">$<strong><%= car.price %></strong></h2>
            </div>
            <div class="car-card-actions">
            <%= link_to 'More info', car_path(car) %>
          </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
