<div class="navbar navbar-expand-sm navbar-light">
  <%= link_to cars_path, class: "navbar-brand" do %>
    <%= cl_image_tag("logo-carbnb_oqqbjq", :width=>60, :height=>60, :crop=>"scale") %>
  <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      </ul>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Car List ", cars_path %><i class="bi bi-backspace"></i></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to "My Bookings ", bookings_path %><i class="bi bi-book"></i></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to "Create a New Car ", new_car_path %><i class="bi bi-plus-square"></i></button>
      <button type="button" class="btn btn-outline-primary"><%= link_to " Sign Out", destroy_user_session_path, method: :delete %> <i class="bi bi-box-arrow-right"></i></button>
    </div>
  </div>
</div>

<div class="container">
  <h4>My Cars</h4>
  <div class="container">
    <% @cars.each_slice(3) do |s| %>
      <div class="row cards pb-3">
        <% s.each do |car| %>
          <div class="col-4-sm">
            <div class="card-trip">
              <%= link_to "+", car_path(car), class: "card-remove-link", method: :delete, data:{confirm: 'Are you sure you want to delete?'} %>
              <% if car.picture_url.present? %>
                <%= image_tag car.picture_url%>
              <% else %>
                <img src="https://www.freeiconspng.com/uploads/no-image-icon-24.jpg" width="450" height="350" crop="scale">
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2> <strong><%= car.brand %></strong></h2>
                  <p><strong><%= car.model %></strong></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
